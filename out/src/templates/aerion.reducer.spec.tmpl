import * as fromProjectReducer from './../store/${inputName}.reducer';
import * as fromProjectAction from './../store/${inputName}.actions';
import {ProjectPage} from '../models/${inputName}Page';
import {Project} from '../models/${inputName}s';
import {PageRequest} from '../../../models/pageRequest';



describe('ProjectReducer', () => {
  it('should set the ${inputName} page', () => {

    // setup
    const {initialState} = fromProjectReducer;
    const payload = new ProjectPage({
      totalResults: 2,
      totalPages: 18,
      currentPage: 2,
      pageSize: 9,
      searchTerm: '',
      pagedData: []
    });
    const  action = new fromProjectAction.SetProjectPage(payload);
    const state = fromProjectReducer.reducer(initialState, action);

    // verify
    expect(state).not.toEqual(initialState);
    expect(state.isLoading).toEqual(false);
    expect(state.errorMessage).toEqual(null);
    expect(state.validationErrors).toEqual(null);
  });
});

